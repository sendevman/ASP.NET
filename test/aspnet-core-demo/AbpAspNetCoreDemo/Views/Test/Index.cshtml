@using Abp.Web.Mvc.Alerts
@model AlertList
@if (Model.Any())
{
    <div id="AbpPageAlerts">
        @foreach (var alertMessage in Model)
        {
            <div class="alert alert-@alertMessage.Type.ToString().ToLower() @(alertMessage.Dismissible ? "alert-dismisable" : "")" role="alert">
                @if (alertMessage.Dismissible)
                {
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                }
                <strong>@alertMessage.Title</strong> @alertMessage.Text
            </div>
        }
    </div>
}

<button id="GetProductsButton">GetAllProducts</button>
<p id="ProductList"></p>

@section scripts
    {
    <script type="text/javascript">
        $(function () {
            $('#GetProductsButton')
                .click(function (e) {
                    e.preventDefault();
                    console.log('making request...1');
                    abp.services.app.product.getAll().done(function (result) {
                        console.log('making request...2');
                        $('#ProductList').text(JSON.stringify(result) + " --- " + new Date().getTime());
                        console.log('making request...3');
                    });
                });
        });
    </script>
}
