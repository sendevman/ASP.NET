@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/styles/basestyles")
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="@Url.Content("~/Scripts/libs/html5shiv.js")"></script>
      <script src="@Url.Content("~/Scripts/libs/respond.min.js")"></script>
    <![endif]-->
    @RenderSection("styles", required: false)
    @Scripts.Render("~/scripts/modernizr")
</head>
<body>
    <div id="wrap">
        <div class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">Test Ever!</a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li class="active"><a href="#">Questions</a></li>
                        <li><a href="#">Exams</a></li>
                    </ul>
                </div>
                <!--/.nav-collapse -->
            </div>
        </div>
        <div class="container">
            @RenderBody()
        </div>
    </div>
    <div id="footer">
        <div class="container">
            <p class="text-muted">
                Designed and developed by <a href="http://www.halilibrahimkalkan.com">Halil İbrahim Kalkan</a> and <a href="http://www.google.com">İsmail Çağdaş</a>.
            </p>
        </div>
    </div>
    @Scripts.Render("~/scripts/baselibs")
    @RenderSection("scripts", required: false)
</body>
</html>
