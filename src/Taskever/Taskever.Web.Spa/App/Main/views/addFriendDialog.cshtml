<div class="messageBox autoclose" style="max-width: 425px">
    <div class="modal-header">
        <h3>Add new friend</h3>
    </div>
    <div class="modal-body">

        <form role="form">

            <div class="form-group">
                <label for="NewTaskTitle">Email address</label>
                <input type="text" class="form-control" id="NewFriendEmailAddress" placeholder="email address" data-bind="value: emailAddress">
            </div>

            <button type="submit" class="btn btn-default" data-bind="click: sendFriendshipRequest">Send Friendship Request</button>

        </form>

    </div>
</div>
